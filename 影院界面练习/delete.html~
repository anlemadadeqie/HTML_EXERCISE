						   (function(i,dom){
						   		console.log(i);
						   		$(".delete")[i].addEventListener("click",function(e){
							      if(e.readystate == "complete")
							      {
							        return;
							      }
							      else
							          deletes(e.target);
							    });
						   })(i,dom);						    
						});
						function deletes(trage){
							console.log(trage);
							trage.parentNode.parentNode.style.display="none";
						}
					    
					});
