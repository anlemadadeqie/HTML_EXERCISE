<script type="text/javascript" src="jquery-2.2.2.min.js"></script>
  <script type="text/javascript">
  	var set = $("#seat");
  	var k = 0;
  	for(var i=0;i<12;i++)
  	{
  		for(var j = 0; j< 15;j++)
  		{
  			(function(i,j){
  				var seet = $("<div></div>");
  				seet.click(function(){
  					var str = "第"+(i+1)+"排第"+(j+1)+"列";
  					if(seet.css("background-color") === "rgb(170, 170, 170)")
  					{
  						seet.css("background-color","#fff");
  						k--;
  						var st = "#"+str;
  						$(st).remove();

  					}
  					else
  					{
  						seet.css("background-color","#aaa");
  						k++;
  						var s = $("<div id='"+str+"'>"+str+"</div>");
  						s.addClass("seatt");
  						$("#choice").append(s);
  					}
  					var suns = 58 * k;
  					$(".Price").html("共计:"+suns+"元");
  				});
  				seet.addClass("seets");
  				set.append(seet);
  			})(i,j);
  		}
  	}
  </script>
